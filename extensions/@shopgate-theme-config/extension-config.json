{
  "version": "1.1.1",
  "id": "@shopgate/theme-config",
  "components": [
    {
      "id": "theme-config",
      "type": "subscribers",
      "path": "frontend/index.js"
    }
  ],
  "configuration": {
    "beta": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "json",
        "label": "Enables or disables the beta features of the themes.",
        "required": false
      }
    },
    "themeIos": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "settings": {},
        "typography": {},
        "colors": {},
        "variables": {},
        "shadows": {},
        "assets": {},
        "pages": []
      },
      "params": {
        "type": "json",
        "label": "IOS Theme Config",
        "required": true
      }
    },
    "themeGmd": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "settings": {},
        "typography": {},
        "colors": {},
        "variables": {},
        "shadows": {},
        "assets": {},
        "pages": []
      },
      "params": {
        "type": "json",
        "label": "GMD Theme Config",
        "required": true
      }
    },
    "mocks": {
      "type": "admin",
      "destination": "backend",
      "default": {
        "enabled": false
      },
      "params": {
        "type": "json",
        "label": "Enables or disables mock data",
        "required": false
      }
    }
  },
  "steps": [
    {
      "path": "extension/mockCatalog2Data.js",
      "hooks": ["shopgate.catalog.getProducts.v1:after"],
      "input": [
        {"key": "showScheduled", "optional": true, "addPipelineInput": true},
        {"key": "products"}],
      "output": [{"key": "products"}]
    },
    {
      "path": "extension/mockSwatches.js",
      "hooks": [
        "shopgate.catalog.getProducts.v1:after",
        "shopgate.catalog.getHighlightProducts.v1:after"
      ],
      "input": [{"key": "products"}],
      "output": [{"key": "products"}]
    },
    {
      "path": "extension/mockSwatchesVariants.js",
      "hooks": ["shopgate.catalog.getProductVariants.v1:after"],
      "input": [{"key": "characteristics"}],
      "output": [{"key": "characteristics"}]
    },
    {
      "path": "extension/mockProductRelations.js",
      "hooks": ["shopgate.catalog.getProductRelations.v1:after"],
      "input": [{"key": "relations"}],
      "output": [{"key": "relations"}]
    },
    {
      "path": "extension/mockProductMedia.js",
      "hooks": ["shopgate.catalog.getProductMedia.v1:after"],
      "input": [{"key": "media"}],
      "output": [{"key": "media"}]
    }
  ]
}
